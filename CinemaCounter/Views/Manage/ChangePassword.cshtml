@model CinemaCounter.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Смена пароля";
}

<div class="mui-row">
    <div class="mui-col-md-8 mui-col-md-offset-2">
        <div class="mui--text-display1 mui--text-dark-secondary page-title">@ViewBag.Title</div>
        <div class="mui-panel">

            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new {role = "form"}))
            {
                @Html.AntiForgeryToken()
                <legend>Форма смены пароля</legend>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="mui-textfield">
                    @Html.TextBoxFor(m => m.OldPassword, new {required = "", placeholder = Html.DisplayNameFor(m => m.OldPassword)})
                </div>
                <div class="mui-textfield">
                    @Html.PasswordFor(m => m.NewPassword, new {required = "", placeholder = Html.DisplayNameFor(m => m.NewPassword)})
                </div>
                <div class="mui-textfield">
                    @Html.PasswordFor(m => m.ConfirmPassword, new {required = "", placeholder = Html.DisplayNameFor(m => m.ConfirmPassword)})
                </div>
                <button type="submit" class="mui-btn mui-btn--primary">Смена пароля</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}