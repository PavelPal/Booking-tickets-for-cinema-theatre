@model CinemaCounter.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Номер телефона";
}

<div class="mui-row">
    <div class="mui-col-md-8 mui-col-md-offset-2">
        <div class="mui--text-display1 mui--text-dark-secondary page-title">@ViewBag.Title</div>
        <div class="mui-panel">

            @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new {role = "form"}))
            {
                @Html.AntiForgeryToken()
                <legend>Добавление номера телефона</legend>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="mui-textfield">
                    @Html.TextBoxFor(m => m.Number, new {required = "", placeholder = Html.DisplayNameFor(m => m.Number)})
                </div>
                <button type="submit" class="mui-btn mui-btn--primary">Отправить</button>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}